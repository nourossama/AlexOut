<!DOCTYPE html>
<html>
<head>
  <title>AlexOut</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div id="layer1">
    	<%= render 'layouts/header'%>
    </div>

	<div class="container" style="margin-top: 700px;" id="layer2">
	<%flash.each do |name, msg|%>
	<% content_tag(:div, msg, class:"alert, alert-info")%>
	<%end%>

    <%= render 'layouts/slideshow'%>
<%= yield %>
</div>
</body>



<style>

body{
	width=100%;
	margin: auto;
	background: #f6b2df;

    }
.container{
	width: 960px;
	margin: 0 auto;
}

</style>
</html>
